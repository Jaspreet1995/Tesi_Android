<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:scrollbarStyle="outsideInset">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0A8190"
        android:isScrollContainer="true"
        android:orientation="vertical"
        android:overScrollMode="ifContentScrolls">

        <TextView
            android:id="@+id/title_1"
            style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="Add a new patient"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="normal" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="596dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:gravity="center"
                android:isScrollContainer="true"
                android:orientation="vertical">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input1"

                    android:layout_width="match_parent"
                    android:layout_height="46dp">

                    <androidx.appcompat.widget.AppCompatEditText

                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:ems="15"
                        android:gravity="center|start"
                        android:hint="Name"

                        android:inputType="text"

                        android:textIsSelectable="false" />

                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input2"
                    android:layout_width="match_parent"
                    android:layout_height="46dp">

                    <androidx.appcompat.widget.AppCompatEditText

                        android:id="@+id/surname"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:ems="15"
                        android:gravity="center|start"
                        android:hint="Surname"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input3"
                    android:layout_width="match_parent"
                    android:layout_height="46dp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:ems="10"
                        android:hint="Username"
                        android:inputType="text" />


                </com.google.android.material.textfield.TextInputLayout>




                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input4"
                    android:layout_width="match_parent"
                    android:layout_height="46dp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/luogonascita"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:ems="10"
                        android:hint="Place of birth"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>






                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input5"
                    android:layout_width="match_parent"
                    android:layout_height="46dp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/sesso_R"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:ems="10"
                        android:hint="Gender"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>





                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input6"
                    android:layout_width="match_parent"
                    android:layout_height="46dp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/numTelefono"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:ems="10"
                        android:hint="Mobile phone"
                        android:inputType="numberDecimal" />

                </com.google.android.material.textfield.TextInputLayout>








                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input7"
                    android:layout_width="match_parent"
                    android:layout_height="46dp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/citta_R"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:ems="10"
                        android:hint="City"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>






                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input8"
                    android:layout_width="match_parent"
                    android:layout_height="46dp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/pv"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:ems="10"
                        android:hint="District"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>




                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input9"
                    android:layout_width="match_parent"
                    android:layout_height="46dp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/paese"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:ems="10"
                        android:hint="Country"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>




                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input10"
                    android:layout_width="match_parent"
                    android:layout_height="46dp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/diott_dx"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:ems="10"
                        android:hint="Right diopters"
                        android:inputType="numberDecimal" />

                </com.google.android.material.textfield.TextInputLayout>




                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input11"
                    android:layout_width="match_parent"
                    android:layout_height="46dp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/diott_sx"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:ems="10"
                        android:hint="Left diopters"
                        android:inputType="numberDecimal" />

                </com.google.android.material.textfield.TextInputLayout>




                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input12"
                    android:layout_width="match_parent"
                    android:layout_height="46dp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:ems="10"
                        android:hint="AAAA-MM-GG"
                        android:inputType="date" />

                </com.google.android.material.textfield.TextInputLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload profile image" />

                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:srcCompat="@tools:sample/avatars[3]" />

                <Button
                    android:id="@+id/add_R"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add patient" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>